<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/p_name"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:text="상품제목"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p_price"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="right|center_vertical"
        android:text="가격"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/p_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#D3D1D1"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/up_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_txt"
        android:layout_width="28dp"
        android:layout_height="40dp"
        android:gravity="center|right|center_horizontal|left|center_vertical"
        android:text=" 개"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/p_count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text=" 원    x   "
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/p_price"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/up_btn"
        android:layout_width="13dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/price_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up" />

    <ImageButton
        android:id="@+id/down_btn"
        android:layout_width="13dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/count_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/down" />

    <Button
        android:id="@+id/del_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:text="삭제"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/down_btn"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>