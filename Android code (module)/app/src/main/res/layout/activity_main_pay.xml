<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Pay">

    <TextView
        android:id="@+id/pay_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="결제가 정상적으로 처리되었습니다."
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/pay_txt1"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/pay_txt1"
        app:layout_constraintTop_toBottomOf="@+id/pay_txt1" />

    <TextView
        android:id="@+id/pay_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="안녕히 가십시오."
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/pay_txt2"
        app:layout_constraintStart_toStartOf="@+id/pay_txt2"
        app:layout_constraintTop_toBottomOf="@+id/pay_txt2" />

    <TextView
        android:id="@+id/pay_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="- 결제 완료 -"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pay_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="(잠시 후 자동으로 종료)"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/pay_txt3"
        app:layout_constraintStart_toStartOf="@+id/pay_txt3"
        app:layout_constraintTop_toBottomOf="@+id/pay_txt3" />

</androidx.constraintlayout.widget.ConstraintLayout>