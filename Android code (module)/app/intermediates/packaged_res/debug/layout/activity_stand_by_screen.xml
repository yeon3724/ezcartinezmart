<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StandByScreen">

    <TextView
        android:id="@+id/screen_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대기화면"
        android:textColor="#000000"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.443" />

    <TextView
        android:id="@+id/screen_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(이미지)"
        android:textColor="#000000"
        android:textSize="44dp"
        app:layout_constraintEnd_toEndOf="@+id/screen_txt1"
        app:layout_constraintStart_toStartOf="@+id/screen_txt1"
        app:layout_constraintTop_toBottomOf="@+id/screen_txt1" />
</androidx.constraintlayout.widget.ConstraintLayout>