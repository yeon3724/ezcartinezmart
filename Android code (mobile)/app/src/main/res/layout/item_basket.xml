<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/basket_name"
        android:layout_width="243dp"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:text="상품제목"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/basket_delete_btn"
        app:layout_constraintStart_toEndOf="@+id/basket_image"
        app:layout_constraintTop_toTopOf="@+id/basket_image" />

    <TextView
        android:id="@+id/basket_price"
        android:layout_width="243dp"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:text="가격"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/basket_delete_btn"
        app:layout_constraintStart_toEndOf="@+id/basket_image"
        app:layout_constraintTop_toBottomOf="@+id/basket_name" />

    <ImageView
        android:id="@+id/basket_image"
        android:layout_width="78dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/basket_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#b99b00"
        android:text="삭제하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>